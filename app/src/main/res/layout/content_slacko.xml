<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityA"
    android:orientation="vertical">
    <Switch
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MasterPower"
        android:textStyle="bold"
        android:id="@+id/switchMaster"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projector"
        android:id="@+id/switchProjector"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projector Blank"
        android:id="@+id/switchProjectorBlank"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TV "
        android:id="@+id/switchTV"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yamaha "
        android:id="@+id/switchYamaha"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metacade "
        android:id="@+id/switchMetacade"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Square Lamp "
        android:id="@+id/switchLamp"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <Switch
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SpaceInvaders"
        android:id="@+id/switchSpaceInvaders"
        android:layout_gravity="center_horizontal"
        android:checked="false" />
    <RelativeLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent" android:layout_height="45dp"
        android:orientation="horizontal">

        <View android:id="@+id/dummy"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_alignRight="@id/dummy"
            android:layout_alignParentLeft="true"
            android:textSize="15pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input"
            android:id="@+id/inputTextView"
            android:textColor="@color/colorTextPrimary"/>

        <TextView
            android:layout_alignLeft="@id/dummy"
            android:layout_alignParentRight="true"
            android:textSize="15pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lighting"
            android:id="@+id/lightingTextView"
            android:textColor="@color/colorTextPrimary"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="250dp">

        <View android:id="@+id/dummy2"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_centerInParent="true"/>
        <RadioGroup

            android:layout_alignRight="@id/dummy2"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lighting"
            >


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night"
                android:id="@+id/lightingNight" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spooky"
                android:id="@+id/lightingSppoky" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smooth"
                android:id="@+id/lightingSmooth" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:id="@+id/lightingNormal" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoSlack"
                android:id="@+id/lightingNoSlack" />
        </RadioGroup>
        <RadioGroup
            android:layout_alignLeft="@id/dummy2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/input"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screenivader"
                android:id="@+id/inputScreenivader" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chromecast"
                android:id="@+id/inputChromecast" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS2"
                android:id="@+id/inputPS2" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS3"
                android:id="@+id/inputPS3" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wii"
                android:id="@+id/inputWii" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDMI"
                android:id="@+id/inputHDMI" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klinke"
                android:id="@+id/inputKlinke" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth"
                android:id="@+id/inputBT" />
        </RadioGroup>
    </RelativeLayout>


</LinearLayout>
